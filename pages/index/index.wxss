/**index.wxss**/
.type-wrapper {
  position: relative;
  display: flex;
  font-size: 30rpx;
  line-height: 42rpx;
  justify-content: center;
}

.type-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.type-item {
  display: flex;
  width: 110rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.type-text {
  display: flex;
  color: white;
}

.type-mark {
  display: flex;
  height: 20rpx;
  opacity: 0.8;
  filter: invert(100%);
}